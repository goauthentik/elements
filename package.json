{
    "name": "@goauthentik/elements",
    "version": "0.0.3",
    "description": "The Authentik open-source elements library",
    "license": "MIT",
    "author": "Authentik Security, Inc. <https://goauthentik.io>",
    "scripts": {
        "analyze": "cem analyze --litelement",
        "build": "run-s build:preface build:main",
        "build:copy-assets": "node ./tools/copy-assets.mjs",
        "build:extract-css": "node ./tools/build-wccss-sheets.mjs",
        "build:host-styles": "node ./tools/css-to-host-css.mjs",
        "build:main": "run-p build:styles build:unit build:types build:copy-assets",
        "build:preface": "run-s clean build:tools build:extract-css",
        "build:root-styles": "node ./tools/write-root-css-collection.mjs",
        "build:styles": "run-s build:host-styles build:root-styles build:stylesheets",
        "build:stylesheets": "node ./tools/build-stylesheets.mjs",
        "build:tools": "tsc -p ./tsconfig.tools.json",
        "build:types": "tsc --declaration --emitDeclarationOnly -p ./tsconfig.json",
        "build:unit": "node ./tools/compile-typescript.mjs",
        "clean": "run-p clean:dist clean:artifacts",
        "clean:artifacts": "rm -f tsconfig*.tsbuildinfo",
        "clean:dist": "rimraf ./dist",
        "lint": "run-s -sn lint:types lint:eslint lint:package",
        "lint:eslint": "eslint --max-warnings 0 --fix",
        "lint:package": "run-s syncpack lint && syncpack fix-mismatches",
        "lint:types": "tsc --declaration --noEmit -p ./tsconfig.json",
        "lit-analyze": "lit-analyzer ./src",
        "precommit": "run-s lint:types lint:eslint prettier-check",
        "prettier": "prettier --cache --write -u .",
        "prettier-check": "prettier --cache --check -u .",
        "storybook": "run-s analyze build storybook:main",
        "storybook:build": "storybook build",
        "storybook:main": "storybook dev -p 6006",
        "test": "run-s clean analyze build test:unit",
        "test:unit": "wdio run ./config/wdio.conf.mjs --logLevel=warn"
    },
    "type": "module",
    "dependencies": {
        "@lit-labs/observers": "^2.0.6",
        "@lit/localize": "^0.12.2",
        "@open-wc/lit-helpers": "^0.7.0",
        "@patternfly/patternfly": "^5.4.2",
        "@patternfly/pfe-core": "^5.0.3",
        "date-fns": "^4.1.0",
        "lit": "^3.3.1",
        "ts-pattern": "^5.8.0"
    },
    "devDependencies": {
        "@custom-elements-manifest/analyzer": "^0.10.5",
        "@eslint/compat": "^1.4.1",
        "@goauthentik/eslint-config": "^1.0.5",
        "@goauthentik/prettier-config": "^3.1.0",
        "@goauthentik/tsconfig": "^1.0.4",
        "@lit/localize": "^0.12.2",
        "@open-wc/lit-helpers": "^0.7.0",
        "@storybook/addon-a11y": "^9.1.3",
        "@storybook/addon-docs": "^9.1.3",
        "@storybook/addon-themes": "^9.1.3",
        "@storybook/preset-scss": "^1.0.3",
        "@storybook/web-components": "^9.1.3",
        "@storybook/web-components-vite": "^9.1.3",
        "@swc/core": "^1.13.5",
        "@trivago/prettier-plugin-sort-imports": "^5.2.2",
        "@types/css": "^0.0.38",
        "@types/mocha": "^10.0.10",
        "@types/parsimmon": "^1.10.9",
        "@types/source-map": "^0.5.2",
        "@wc-toolkit/storybook-helpers": "^9.0.1",
        "@wdio/browser-runner": "^9.19.2",
        "@wdio/cli": "^9.19.2",
        "@wdio/globals": "^9.17.0",
        "@wdio/mocha-framework": "^9.19.2",
        "@wdio/spec-reporter": "^9.19.2",
        "@wdio/types": "^9.19.2",
        "chokidar": "^4.0.3",
        "css": "^3.0.0",
        "eslint-plugin-sonarjs": "^3.0.5",
        "glob": "^11.0.3",
        "lit-analyzer": "^2.0.3",
        "npm-run-all": "^4.1.5",
        "p-iteration": "^1.1.8",
        "parsimmon": "^1.18.1",
        "prettier": "^3.6.2",
        "rimraf": "^6.0.1",
        "rollup-plugin-modify": "^3.0.0",
        "sass": "^1.90.0",
        "storybook": "^9.1.3",
        "syncpack": "^13.0.4",
        "ts-lit-plugin": "^2.0.2",
        "typescript": "^5.9.2",
        "vite": "^7.1.3",
        "vite-plugin-lit-css": "^2.2.1",
        "vite-tsconfig-paths": "^5.1.4",
        "wdio-wait-for": "^3.1.0",
        "yaml": "^2.8.1"
    },
    "engines": {
        "node": ">=24"
    },
    "keywords": [
        "authentik",
        "design system",
        "lit-element",
        "web components"
    ],
    "homepage": "https://github.com/goauthentik/elements#readme",
    "bugs": "https://github.com/goauthentik/elements/issues",
    "repository": "goauthentik/elements.git",
    "prettier": "@goauthentik/prettier-config",
    "eslintConfig": {
        "extends": [
            "plugin:storybook/recommended"
        ]
    },
    "customElements": "custom-elements.json"
}
