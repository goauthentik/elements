{
    "$schema": "https://json.schemastore.org/swcrc",
    "jsc": {
        "parser": {
            "syntax": "typescript",
            "tsx": false,
            "decorators": true,
            "dynamicImport": true
        },
        "transform": {
            "decoratorMetadata": true,
            "legacyDecorator": true,
            "useDefineForClassFields": false
        },
        "target": "es2017",
        "loose": false,
        "externalHelpers": false,
        "keepClassNames": true,
        "baseUrl": "."
    },
    "module": {
        "type": "es6"
    },
    "sourceMaps": true,
    "minify": false,
    "exclude": ["node_modules", "dist"]
}
