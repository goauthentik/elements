$config {
    import: @patternfly/patternfly/components/EmptyState/empty-state.css;
    output: ak-empty-state.css;
    base: .pf-v5-c-empty-state;
}

:host {
    $from: $base;
    $include: /^--/;
}

:host {
      $from: $base;
      $include: position, display;
}

#main {
      $from: $base;
      $exclude: /^--/, position, display;
}

:host([\1]) {
    $from: /\.pf-m-(xs|sm|md|lg|xl|full-height|inline|in-progress)/;
}

.\1 {
    $from: /__(inline|icon|title-text|body|footer|actions)/;
}
